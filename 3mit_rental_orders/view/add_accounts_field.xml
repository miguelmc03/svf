<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_account_field" model="ir.ui.view">
            <field name="name">product.template.form.inherit.rental</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="sale_renting.product_template_form_view_rental"/>
            <field name="arch" type="xml">
                    <xpath expr="//page[@name='rental']/group/group[@name='extra']" position='after'>
                        <page>
                            <group string="Contabilidad" name="cuenta">
                                <field name="rental_account_id" attrs="{'required': [('rent_ok', '=', True)]}"/>
                            </group>
                        </page>
                    </xpath>
            </field>
        </record>
    </data>
</odoo>