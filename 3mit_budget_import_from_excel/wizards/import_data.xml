<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="import_data_form" model="ir.ui.view">
            <field name="name">Seleccion.form</field>
            <field name="model">import.budget.from.excel</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Importa Data" col="4">
                    <group>
                        <field name="excel_document" filename="document_name"></field>
                        <field name="document_name" invisible="1"></field>
                        <footer>
                            <button type="special" special="cancel" string="Cancel" icon="fa-times-circle"/>
                            <button type="object" string="Aceptar" name="saveData" icon="fa-mail-reply-all" />
                        </footer>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="import_data_wizard">
            <field name="name">Importar Data de Excel</field>
            <field name="res_model">import.budget.from.excel</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>