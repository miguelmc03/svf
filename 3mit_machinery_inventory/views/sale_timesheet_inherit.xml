<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="3mit_project_task_inherit_view" model="ir.ui.view">
            <field name="name">3mit.project.task.inherit.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="sale_timesheet.view_sale_service_inherit_form2" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='sale_line_id']" position="before">
                    <field name="maquinaria_vista" readonly="1" />
                </xpath>

                <xpath expr="//field[@name='sale_line_id']" position="attributes">
                    <attribute name="attrs">
                        {'invisible': 1}
                    </attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>