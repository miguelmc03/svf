<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario para el registro de maquinaria -->
        <record id="machinery_registry_form" model="ir.ui.view">
            <field name="name">machinery.registry.form</field>
            <field name="model">machinery.registry</field>
            <field name="arch" type="xml">
                <form string="Datos de la maquinaria a registrar">
                    <header>
                        <button name="action_active" type="object" string="Activar" class="oe_highlight" />
                        <button name="action_inactive" type="object" string="Desactivar" class="btn btn-secondary" />
                        <field name="status_id" widget="statusbar" statusbar_visible="activo,inactivo" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="fabricantes" placeholder="Introduzca el fabricante de equipo original" />
                                <field name="modelo_maquinaria" placeholder="Introduzca el modelo" />
                            </group>

                            <group>
                                <field name="fecha_fab_aux"
                                       placeholder="Ingrese la fecha de fabricaciÃ³n"
                                       attrs="{'invisible': [('edit_status', '=', 'view')]}"
                                       widget="date"
                                />
                                <field name="fecha_fab"
                                       attrs="{'invisible': [('edit_status', '=', 'edit')]}"
                                       readonly="1"
                                />
                                <field name="fecha_marcha"
                                       placeholder="Ingrese la fecha de puesta en marcha"
                                       widget="date"
                                />
                                <field name="horas_act"
                                       placeholder="Digite la cantidad de horas actuales"
                                       widget="float_time"
                                />
                                <field name="horas_trabajo"
                                       placeholder="Digite la cantidad de horas de trabajo promedio"
                                       widget="float_time"
                                />
                                <field name="partner_ref"
                                       readonly="1"
                                       invisible="1"
                                       widget="boolean_toggle"
                                />
                                <field name="partner_belong_id"
                                       readonly="1"
                                       invisible="1"
                                />
                                <field name="new_client_belong_id"
                                       readonly="1"
                                       invisible="1"
                                />
                                <field name="inventory_id"
                                       readonly="1"
                                       invisible="1"
                                />
                            </group>

                            <group>
                                <field name="n_serial" placeholder="Introduzca su numero de serie" />
                                <field name="aplicacion" placeholder="Ingrese el uso de la maquinaria" />
                                <field name="edit_status" widget="statusbar" invisible="1" statusbar_visible="edit,view" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de lista para el registro de maquinaria -->
        <record id="machinery_registry_tree" model="ir.ui.view">
            <field name="name">machinery.registry.tree</field>
            <field name="model">machinery.registry</field>
            <field name="arch" type="xml">
                <tree string="Maquinaria">
                    <field name="fabricantes" />
                    <field name="modelo_maquinaria" />
                    <field name="n_serial" />
                    <field name="aplicacion" />
                    <field name="fecha_fab" />
                    <field name="fecha_marcha" />
                    <field name="horas_act" />
                    <field name="horas_trabajo" />
                </tree>
            </field>
        </record>
    </data>
</odoo>