<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <data>
    <record id="view_company_compra_edit" model="ir.ui.view">
        <field name="name">Campo para enviar notificacio de orden de compras</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
                <xpath expr="//page/group/group/field[@name='partner_id']" position="after">
                    <field name="compra_notification"  string="Notificación de Compras"/>
                </xpath>

        </field>
    </record>
    </data>

    <record id="template_compra_email" model="mail.template">
        <field name="name">notificacion.compra.email</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="email_from" >${object.company_id.email or ('noreply@' + object.company_id.name + '.com')}</field>
        <field name="email_to" >${object.email_to|safe}</field>
        <field name="lang">${object.company_id.lang}</field>
        <field name="report_template" ref="purchase.action_report_purchase_order"/>
        <field name="subject">Notificación de orden de compra ${object.name}</field>
        <field name="body_html">
            <![CDATA[
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                    <p>Buen Día, ${object.name_usuario or ' '}.
                    <br/><br/>
                    Sirva la presente para notificar la creación del pedido de compra  ${object.name or ' '}  para el proveedor ${object.partner_id.name or ' '},  desde la compañia ${object.company_id.name or ' '}
                    <br/><br/>
                    Saludos Coordiales.
                    <br/><br/>
                    </p>
                </div>
            ]]>
        </field>
    </record>

</odoo>
