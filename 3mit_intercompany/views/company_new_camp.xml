<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_inter_edit" model="ir.ui.view">
            <field name="name">Campo Automatizar Company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                    <xpath expr="//page/group/group/field[@name='auto_validation']" position="after">
                        <field name="inter_automatic" attrs="{'invisible':[('rule_type', '!=', 'so_and_po')]}" string="¿Compañía Intermediaria?"/>
                    </xpath>

            </field>
        </record>
    </data>
</odoo>
