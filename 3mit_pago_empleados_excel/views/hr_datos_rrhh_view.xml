<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_costehora_form" model="ir.ui.view">
            <field name="name">hr.employee.costehora</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='timesheet_validated']" position="after">
                    <field name="coste_hora" string="Valor por hora"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>