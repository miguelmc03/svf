<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_customer_request_wizard" model="ir.ui.view">
            <field name="name">wizard.customer.request.form</field>
                <field name="model">wizard.customer.request</field>
                <field name="arch" type="xml">
                    <form string="Solicitud de Registro de Cliente">
                        <field invisible="1" name="state"/>
                        <div states="choose">
                            <group colspan="2" col="2">
                                <field name="user" string="Destinatario" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </div>
                        <footer states="choose">
                            <button name="action_create_cliente" string="Enviar Email" type="object" class="btn-primary"/>
                        </footer>
                        <footer states="get">
                            <button special="cancel" string="Cancel" class="oe_highlight" />
                        </footer>
                    </form>
                </field>
        </record>

        <record id="action_customer_request" model="ir.actions.act_window">
        	<field name="name">Solicitud de Registro de cliente</field>
        	<field name="res_model">wizard.customer.request</field>
        	<field name="binding_view_types">form</field>
        	<field name="view_mode">form</field>
        	<field name="context">{}</field>
        	<field name="target">new</field>
    	</record>

    </data>
</openerp>
